@using Blazor.SharedUI.RCL.Shared
<Router AppAssembly="@typeof(Main).Assembly"
		AdditionalAssemblies="new[] { typeof(Blazor.SharedUI.RCL.Shared.MainLayout).Assembly }">
	<Found Context="routeData">
		<RouteView RouteData="@routeData" DefaultLayout="@typeof(Blazor.SharedUI.RCL.Shared.MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(Blazor.SharedUI.RCL.Shared.MainLayout)">
			<p role="alert">Sorry, there's nothing at this address.</p>
		</LayoutView>
	</NotFound>
</Router>
